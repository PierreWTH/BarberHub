{% extends 'base.html.twig' %}

{% block title %} Ajouter une prestation {% endblock %}

{% block body %}

<section class="admin-pannel">
    {% include "security/admin/_sidebar.html.twig" %}
<div class="admin-pannel-content-prestation">
        
<div class="add-prestation-admin-form">
    <h1> Ajouter un Emloyé / Manager </h1>

    {{ form_start(formAddPersonnel) }}
    {{ form_row(formAddPersonnel.barbershop) }}
    {{ form_row(formAddPersonnel.user) }}
    <div class="checkbox-wrapper-2">
        {{ form_row(formAddPersonnel.manager) }}
    </div>
    {{ form_end(formAddPersonnel) }}
</div>
<div class="table-prestation-admin">
    <h2> Toutes les Employés </h2>
    <table class="admin-employee-table">
        <thead>
            <tr>
                <th> Pseudo </th>
                <th> Barbershop </th>
                <th> Statut </th>
            </tr>
        </thead>
        <tbody>
            {% for personne in personnel %}
            <tr>
                <td>{{ personne.user}}</td>
                <td>{{ personne.barbershop.nom}}</td>
                {% if personne.isManager == 1 %}
                    <td> Manager </td>
                {% else %}
                    <td> Employé </td>
                {% endif %}
            </tr>
            {% endfor %}
        </tbody>
    </table>


</div>
</div>
</section>


{% endblock %}
