{% extends 'base.html.twig' %}

{% block title %} Ajouter une prestation {% endblock %}

{% block body %}

<section class="admin-pannel">
    {% include "security/admin/_sidebar.html.twig" %}
<div class="admin-pannel-content-prestation">
        
<div class="add-prestation-admin-form">
    <h1> Ajouter un Employé </h1>

    {{ form_start(formAddPersonnel) }}
    {{ form_row(formAddPersonnel.barbershop) }}
    {{ form_row(formAddPersonnel.user) }}
    <div class="checkbox-wrapper-2">
        {{ form_row(formAddPersonnel.manager) }}
    </div>
    {{ form_end(formAddPersonnel) }}
</div>
<div class="table-prestation-admin" >
    <h2> Tous les employés </h2>
    <table class="admin-employee-table" id="responsive-table">
        <thead>
            <tr>
                <th> Pseudo </th>
                <th> Barbershop </th>
                <th> Statut </th>
                <th> Action </th>
            </tr>
        </thead>
        <tbody>
            {% for personne in personnel %}
            <tr>
                <td data-label = 'Pseudo'>{{ personne.user}}</td>
                <td data-label = 'Salon'>{{ personne.barbershop.nom}}</td>
                {% if personne.isManager == 1 %}
                    <td data-label = 'Role'> Manager </td>
                {% else %}
                    <td data-label = 'Role'> Employé </td>
                {% endif %}
                <td data-label = 'Action'><a href="{{ path('edit_personnel', {id : personne.id })}}"> Modifier </a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>


</div>
</div>
</section>


{% endblock %}
