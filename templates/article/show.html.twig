{% extends 'base.html.twig' %}

{% block title %} {{ article.titre }} {% endblock %}

{% block body %}
<section id="show-article-container">

<div class="show-article-header">
    <img src="{{ article.photo}}" alt="{{article.titre}}">
    <div class="show-article-title">
        <h1> {{ article.titre }} </h1>
        <p> {{article.description}} </p>
        <p> <i class="fa-solid fa-user"></i> Par {{ article.user is not null ? article.user.pseudo : 'Supprim√©' }} le {{article.date| format_datetime('short', 'none', locale='fr')}}</p>
    </div>
</div>
<article class="show-article-content">
{{ article.texte|raw}}
</article>
</section>
{% endblock %}
