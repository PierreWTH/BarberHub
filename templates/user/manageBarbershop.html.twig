               {% set sommeNote = sommeNote + avis.note %}
            {% endfor %}
            <span class="stat-number">{{sommeNote // barbershop.avis|length}}</span>
               Etoiles / 5            
         </p>
                  
                    
                    {% else %}
                    <p> Pas d'avis </p>
                  {% endif %}
     </div>
    
    </div>
    </div>
